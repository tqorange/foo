if [[ "$OSTYPE" == "darwin"* ]]; then
    export PS1="\[\e[034m\]____\u$\[\e[m\] "
    source "/usr/local/opt/kube-ps1/share/kube-ps1.sh"
    PS1='$(kube_ps1)'$PS1
