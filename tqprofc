ec2x() {

    PEM=""
    if [[ "$1" == "m" ]]; then
        PEM="/Users/tqb/bu/Muts-Automation.pem"
    elif [[ "$1" == "o" ]]; then
        ssh -i /Users/tqb/bu/atsu-openshift.pem centos@$2
        exit 0
    elif [[ "$1" == "q" ]]; then
        PEM="/Users/tqb/bu/tqb.pem"
    elif [[ "$1" == "t" ]]; then
        PEM="/Users/tqb/bu/TestAutomation.pem"
    fi

    ssh -i "$PEM" ec2-user@$2
}


